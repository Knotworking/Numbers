<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brl.unitconverter.MainActivity">

    <Spinner
        android:id="@+id/activity_main_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/equals"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="="
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_main_type_spinner"/>

    <LinearLayout
        android:id="@+id/activity_main_input_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/activity_main_type_spinner"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/equals">

        <EditText
            android:id="@+id/activity_main_input_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="1"
            android:layout_margin="8dp"/>

        <Spinner
            android:id="@+id/activity_main_input_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_output_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/activity_main_type_spinner"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/equals">

        <EditText
            android:id="@+id/activity_main_output_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_margin="8dp"/>

        <Spinner
            android:id="@+id/activity_main_output_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
