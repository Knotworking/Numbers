<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="item"
            type="com.knotworking.numbers.counter.CounterItem" />

        <variable
            name="actions"
            type="com.knotworking.numbers.counter.CounterActions" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onLongClick="@{view -> actions.deleteItem(item.id)}">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minus"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/counter_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="@{item.name + item.id}"/>

        <TextView
            android:id="@+id/counter_item_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="@{Integer.toString(item.count)}"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plus"
            android:padding="20dp"/>

    </LinearLayout>
</layout>